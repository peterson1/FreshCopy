<UserControl x:Class="FreshCopy.ServerControl.WPF.CurrentClientele.SubTableByUserAgent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreshCopy.ServerControl.WPF.CurrentClientele"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
    </UserControl.Resources>
    <DataGrid ItemsSource="{Binding }">
        <DataGrid.Columns>
            <DataGridTextColumn Header="HubName"       Binding="{Binding HubName      }" />
            <DataGridTextColumn Header="AgentVersion"  Binding="{Binding AgentVersion }" />
            <DataGridTextColumn Header="ConnectionId"  Binding="{Binding ConnectionId }" />
            <DataGridTextColumn Header="LastActivity"  Binding="{Binding LastActivity }" />
            <DataGridTextColumn Header="LastHubMethod" Binding="{Binding LastHubMethod}" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
